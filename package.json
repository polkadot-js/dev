{
  "version": "0.32.0-beta.8",
  "private": true,
  "engines": {
    "yarn": "^1.10.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0",
    "typescript": "^3.6.4"
  },
  "scripts": {
    "build": "yarn build:split:code && yarn build:split:docs",
    "build:split:code": "polkadot-dev-build-ts && (cd packages/dev && copyfiles config/* scripts/* skeleton/* build) && (cd packages/dev-react && copyfiles config/* scripts/* skeleton/* build)",
    "build:split:docs": "polkadot-dev-build-docs",
    "check": "yarn lint",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx && tsc --noEmit --pretty",
    "clean": "polkadot-dev-clean-build",
    "polkadot-dev-version-beta": "./packages/dev/scripts/polkadot-dev-version-beta.sh",
    "polkadot-dev-version-minor": "./packages/dev/scripts/polkadot-dev-version-minor.sh",
    "polkadot-dev-version-patch": "./packages/dev/scripts/polkadot-dev-version-patch.sh",
    "postinstall": "./packages/dev/scripts/polkadot-dev-yarn-only.js",
    "test": "jest --coverage"
  },
  "devDependencies": {
    "copyfiles": "^2.1.1"
  }
}
