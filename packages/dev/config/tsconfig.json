{
  "compilerOptions": {
    /**
     * This needs to align with scripts/polkadot-dev-build-ts & dev-ts/loader
     * (target here is specifically tied to the minimum supported version)
     */
    "module": "esnext",
    "moduleResolution": "nodenext",
    "target": "es2020",

    /**
     * Specific compilation configs for polkadot-js projects as it is used
     * (we only compile *.d.ts via the tsc command-line)
     */
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "preserve",

    /**
     * Strictest tsconfig settings, as per
     * https://github.com/tsconfig/bases/blob/a606a8dd27b31d76603f076d7602ddf8506d1102/bases/strictest.json
     */
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strict": true,

    /**
     * These appear in strictest, however we don't (yet) use them
     */
    // "exactOptionalPropertyTypes": true,
    // "checkJs": true,

    /**
     * These are deprecated by ts 5.0+, but still appeared in strictest
     */
    // "importsNotUsedAsValues": "error",
  }
}
