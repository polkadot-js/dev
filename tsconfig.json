{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./packages",
    "composite": false,
    "emitDeclarationOnly": false,
    "noEmit": true
  },
  "include": [
    "packages/**/src/**/*",
    "packages/**/config/**/*",
    "packages/**/scripts/**/*"
  ],
  "exclude": [
    "**/build/**/*",
    "**/node_modules/**/*"
  ]
}
